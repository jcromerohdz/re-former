<h1>Edit User</h1>
<%= form_for(@user, url: user_path) do |f| %>        
  <%= f.label :username %>
  <%= f.text_field :username, placeholder: 'Your username', class: 'form-control' %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: 'Your email', class: 'form-control' %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>
  <br>
  <%= f.submit "Submit", class: "btn btn-outline-primary" %>
<% end %>